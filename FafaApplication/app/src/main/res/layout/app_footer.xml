<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_footer_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/button_open_in_browser"
            android:layout_width="@dimen/dim_footer_icon"
            android:layout_height="@dimen/dim_footer_icon"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_button_open_in_browser" />

        <TextView
            android:id="@+id/txt_open_in_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_open_in_browser"
            android:layout_centerHorizontal="true"
            android:text="Open in browser"
            android:textSize="@dimen/footer_text_size" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/button_file_downloaded"
            android:layout_width="@dimen/dim_footer_icon"
            android:layout_height="@dimen/dim_footer_icon"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_button_file_downloaded" />

        <TextView
            android:id="@+id/txt_file_downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_file_downloaded"
            android:layout_centerHorizontal="true"
            android:text="File Download"
            android:textSize="@dimen/footer_text_size" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/button_folder_open"
            android:layout_width="@dimen/dim_footer_icon"
            android:layout_height="@dimen/dim_footer_icon"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_button_folder_open" />

        <TextView
            android:id="@+id/txt_folder_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_folder_open"
            android:layout_centerHorizontal="true"
            android:text="Open folder"
            android:textSize="@dimen/footer_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/button_featured_play_list"
            android:layout_width="@dimen/dim_footer_icon"
            android:layout_height="@dimen/dim_footer_icon"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_button_featured_play_list" />

        <TextView
            android:id="@+id/txt_featured_play_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_featured_play_list"
            android:layout_centerHorizontal="true"
            android:text="Play list"
            android:textSize="@dimen/footer_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/button_settings"
            android:layout_width="@dimen/dim_footer_icon"
            android:layout_height="@dimen/dim_footer_icon"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_button_settings" />


        <TextView
            android:id="@+id/txt_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_settings"
            android:layout_centerHorizontal="true"
            android:text="Settings"
            android:textSize="@dimen/footer_text_size" />
    </RelativeLayout>
</LinearLayout>



